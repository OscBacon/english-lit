<h1>Listing essays</h1>
<%= link_to 'New essay', new_essay_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <% @essays.each do |essay| %>
  <tr>
    <td><%= essay.title %></td>
    <td><%= essay.text %></td>
    <td><%= link_to 'Show', essay_path(essay) %></td>
    <td><%= link_to 'Edit', edit_essay_path(essay) %></td>
    <td><%= link_to 'Destroy', essay_path(essay), method: :delete, data: {confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
</table>
